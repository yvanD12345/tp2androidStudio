<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#00877A">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="#03A9F4"

            ><RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <!-- Text View to display Course Name -->
                <ToggleButton
                    android:id="@+id/bouttonFavori"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/favorie"

                    android:contentDescription="@string/app_name"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/bouttonFavori"
                    android:text="nom"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Text VIew to display Course Rating -->
                <!-- Image used in present in drawable folder -->
                <TextView
                    android:id="@+id/emailentreprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nom"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/bouttonFavori"
                    android:drawablePadding="2dp"
                    android:text="email entreprise"
                    app:drawableStartCompat="@drawable/ic_work" />
        </RelativeLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>